    <script>
        /* --- CENTRAL STATE --- */
        let requests = [];
        let role = 'guest';
        let notifications = [];
        let vendorStats = { bidsSent: 0, jobsWon: 0 };
        let currentVendorTab = 'all';
        let currentNotificationTab = 'all';

        const subtypes = {
            'Cleaning': ['Deep Clean', 'Maid Service', 'Sofa Cleaning'],
            'Plumbing': ['Leak Repair', 'Unblock Drain', 'Install Pump'],
            'Car Repair': ['Tire Change', 'Battery', 'Oil Change'],
            'AC': ['Gas Refill', 'Service', 'Compressor'],
            'Construction': ['Painting', 'Tiling', 'Gypsum'],
            'Electrical': ['Wiring', 'Socket Fix', 'Lighting']
        };

        // STRICT CATEGORY VENDOR MATCHING
        const vendorDatabase = {
            'Cleaning': [{name: 'Manama Maids', base: 20}, {name: 'Elite Cleaning', base: 25}, {name: 'Sparkle BH', base: 15}],
            'Plumbing': [{name: 'QuickFix Pipes', base: 15}, {name: 'Saar Plumbers', base: 20}, {name: 'Leak Masters', base: 18}],
            'Car Repair': [{name: 'Riffa Garage', base: 10}, {name: 'Speedy Motors', base: 35}, {name: 'AutoTech BH', base: 25}],
            'AC': [{name: 'Cool Breeze', base: 15}, {name: 'Chill Master', base: 20}, {name: 'Frosty Tech', base: 18}],
            'Construction': [{name: 'BuildRight', base: 50}, {name: 'Bahrain Reno', base: 100}, {name: 'Solid Foundation', base: 80}],
            'Electrical': [{name: 'Volt Master', base: 10}, {name: 'Bright Spark', base: 15}, {name: 'PowerFix', base: 12}]
        };

        const suppliers = [
            {item: 'Cement (50kg)', price: '2.5 BHD', category: 'Construction'},
            {item: 'Paint (18L)', price: '12.0 BHD', category: 'Construction'},
            {item: 'PVC Pipe (3m)', price: '4.0 BHD', category: 'Plumbing'},
            {item: 'Electrical Wire (100m)', price: '15.0 BHD', category: 'Electrical'},
            {item: 'Cleaning Supplies Kit', price: '8.5 BHD', category: 'Cleaning'},
            {item: 'AC Gas Canister', price: '22.0 BHD', category: 'AC'}
        ];

        /* --- BAHRAIN WEATHER & TIME --- */
        function updateDateTime() {
            const now = new Date();
            const options = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit',
                timeZone: 'Asia/Bahrain'
            };
            const dateTimeStr = now.toLocaleDateString('en-US', options);
            document.getElementById('datetime-display').textContent = dateTimeStr;
        }

        function fetchBahrainWeather() {
            // Using OpenWeatherMap API (free tier)
            const apiKey = 'bd5e378503939ddaee76f12ad7a97608'; // This is a demo key, consider using your own
            const city = 'Manama';
            const country = 'BH';
            const url = `https://api.openweathermap.org/data/2.5/weather?q=${city},${country}&units=metric&appid=${apiKey}`;
            
            fetch(url)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Weather data not available');
                    }
                    return response.json();
                })
                .then(data => {
                    const temp = Math.round(data.main.temp);
                    const description = data.weather[0].description;
                    const iconCode = data.weather[0].icon;
                    
                    // Update weather widget
                    document.querySelector('.weather-temp').textContent = `${temp}°C`;
                    document.querySelector('.weather-desc').textContent = description;
                    
                    // Update weather icon based on condition
                    const iconElement = document.querySelector('.weather-widget i');
                    if (iconCode.includes('01')) {
                        iconElement.className = 'fas fa-sun';
                        iconElement.style.color = '#FDB813';
                    } else if (iconCode.includes('02') || iconCode.includes('03') || iconCode.includes('04')) {
                        iconElement.className = 'fas fa-cloud';
                        iconElement.style.color = '#94a3b8';
                    } else if (iconCode.includes('09') || iconCode.includes('10')) {
                        iconElement.className = 'fas fa-cloud-rain';
                        iconElement.style.color = '#64748b';
                    } else if (iconCode.includes('11')) {
                        iconElement.className = 'fas fa-bolt';
                        iconElement.style.color = '#F59E0B';
                    } else if (iconCode.includes('13')) {
                        iconElement.className = 'fas fa-snowflake';
                        iconElement.style.color = '#cbd5e1';
                    } else if (iconCode.includes('50')) {
                        iconElement.className = 'fas fa-smog';
                        iconElement.style.color = '#94a3b8';
                    }
                })
                .catch(error => {
                    console.error('Error fetching weather:', error);
                    // Fallback to static data if API fails
                    document.querySelector('.weather-temp').textContent = '26°C';
                    document.querySelector('.weather-desc').textContent = 'Sunny';
                });
        }

        /* --- NAVIGATION & LOGIN LOGIC --- */
        function login(r) {
            role = r;
            document.getElementById('main-header').style.display = 'flex';
            buildMenu();
            
            // Add welcome notification
            addNotification({
                title: `Welcome to FlipBid Pro${r === 'customer' ? ' Customer Portal' : ' Vendor Portal'}`,
                message: 'Get started by exploring the features available to you.',
                type: 'info'
            });
            
            if(r === 'customer') {
                const savedName = document.getElementById('p-name').value;
                if(savedName) {
                    document.getElementById('dash-name').innerText = savedName;
                    document.getElementById('profile-name').innerText = savedName;
                }
                navTo('customer-dash');
                renderRequests();
                updateCustomerStats();
            } else {
                generateSeedRequests();
                navTo('vendor-dash');
                renderVendorLeads();
                updateVendorStats();
            }
            
            document.getElementById('profile-role').innerText = r === 'customer' ? 'Customer' : 'Service Partner';
        }

        function navTo(id) {
            document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
            document.getElementById(id).classList.add('active');
            document.getElementById('overlay').style.display = 'none';
            document.getElementById('sidebar').classList.remove('open');
            
            // Update stats when navigating to dashboards
            if (id === 'customer-dash') {
                updateCustomerStats();
            } else if (id === 'vendor-dash') {
                updateVendorStats();
            } else if (id === 'notifications-screen') {
                renderNotifications();
            }
        }

        function goBack() {
            if (role === 'customer') {
                navTo('customer-dash');
            } else {
                navTo('vendor-dash');
            }
        }

        function toggleMenu() {
            const sb = document.getElementById('sidebar');
            const ov = document.getElementById('overlay');
            if(sb.classList.contains('open')) { 
                sb.classList.remove('open'); 
                ov.style.display='none'; 
            } else { 
                sb.classList.add('open'); 
                ov.style.display='block'; 
            }
        }

        function buildMenu() {
            const ul = document.getElementById('menu-list');
            ul.innerHTML = '';

            const savedName = document.getElementById('p-name').value;
            document.getElementById('menu-user').innerText = (role === 'customer' && savedName) ? savedName : (role === 'vendor' ? 'Vendor Inc.' : 'Guest');
            document.getElementById('menu-role').innerText = role === 'customer' ? 'Customer' : 'Service Partner';

            if(role === 'customer') {
                ul.innerHTML += `<li onclick="navTo('customer-dash')"><i class="fas fa-home"></i> Home</li>`;
                ul.innerHTML += `<li onclick="navTo('profile-screen')"><i class="fas fa-user"></i> Profile</li>`;
                ul.innerHTML += `<li onclick="navTo('notifications-screen')"><i class="fas fa-bell"></i> Notifications</li>`;
                ul.innerHTML += `<li onclick="navTo('complaint-screen')"><i class="fas fa-exclamation-triangle"></i> Complaints</li>`;
                ul.innerHTML += `<li onclick="navTo('contact-screen')"><i class="fas fa-envelope"></i> Support</li>`;
            } else {
                ul.innerHTML += `<li onclick="navTo('vendor-dash')"><i class="fas fa-th-large"></i> Leads</li>`;
                ul.innerHTML += `<li onclick="navTo('supplier-screen')"><i class="fas fa-boxes"></i> Suppliers</li>`;
                ul.innerHTML += `<li onclick="navTo('profile-screen')"><i class="fas fa-user"></i> Profile</li>`;
                ul.innerHTML += `<li onclick="navTo('notifications-screen')"><i class="fas fa-bell"></i> Notifications</li>`;
            }

            ul.innerHTML += `<li onclick="location.reload()" style="color:var(--danger);"><i class="fas fa-sign-out-alt"></i> Logout</li>`;
        }

        /* --- NOTIFICATION SYSTEM --- */
        function addNotification(notification) {
            const id = Date.now();
            const newNotification = {
                id: id,
                title: notification.title,
                message: notification.message,
                type: notification.type || 'info',
                read: false,
                timestamp: new Date(),
                actions: notification.actions || []
            };
            
            notifications.unshift(newNotification);
            updateNotificationBadge();
            
            // Show toast notification
            showToast(newNotification.message, newNotification.type);
        }

        function updateNotificationBadge() {
            const unreadCount = notifications.filter(n => !n.read).length;
            const badge = document.getElementById('notification-count');
            
            if (unreadCount > 0) {
                badge.style.display = 'flex';
                badge.innerText = unreadCount > 9 ? '9+' : unreadCount.toString();
            } else {
                badge.style.display = 'none';
            }
        }

        function renderNotifications() {
            const container = document.getElementById('notifications-list');
            container.innerHTML = '';
            
            let filteredNotifications = notifications;
            
            if (currentNotificationTab === 'unread') {
                filteredNotifications = notifications.filter(n => !n.read);
            }
            
            if (filteredNotifications.length === 0) {
                container.innerHTML = `
                    <div style="text-align: center; padding: 40px 20px; color: var(--text-light);">
                        <i class="fas fa-bell-slash" style="font-size: 3rem; margin-bottom: 15px; opacity: 0.5;"></i>
                        <h3 style="margin-bottom: 10px;">No notifications</h3>
                        <p>You're all caught up! New notifications will appear here.</p>
                    </div>
                `;
                return;
            }
            
            filteredNotifications.forEach(notification => {
                const timeAgo = getTimeAgo(notification.timestamp);
                const iconClass = getNotificationIcon(notification.type);
                const iconColor = getNotificationColor(notification.type);
                
                container.innerHTML += `
                    <div class="notification-item ${notification.read ? '' : 'unread'}" onclick="markAsRead(${notification.id})">
                        <div class="notification-icon ${notification.type}" style="background: ${iconColor.background}; color: ${iconColor.color};">
                            <i class="${iconClass}"></i>
                        </div>
                        <div class="notification-content">
                            <div class="notification-title">${notification.title}</div>
                            <div class="notification-message">${notification.message}</div>
                            <div class="notification-time">${timeAgo}</div>
                            ${notification.actions.length > 0 ? `
                                <div class="notification-actions">
                                    ${notification.actions.map(action => 
                                        `<div class="notification-action ${action.primary ? 'primary' : ''}" onclick="event.stopPropagation(); ${action.onclick}">${action.label}</div>`
                                    ).join('')}
                                </div>
                            ` : ''}
                        </div>
                    </div>
                `;
            });
        }

        function getNotificationIcon(type) {
            switch(type) {
                case 'success': return 'fas fa-check-circle';
                case 'warning': return 'fas fa-exclamation-triangle';
                case 'error': return 'fas fa-times-circle';
                default: return 'fas fa-info-circle';
            }
        }

        function getNotificationColor(type) {
            switch(type) {
                case 'success': return { background: '#dcfce7', color: '#10B981' };
                case 'warning': return { background: '#fef3c7', color: '#F59E0B' };
                case 'error': return { background: '#fee2e2', color: '#EF4444' };
                default: return { background: '#dbeafe', color: '#0066FF' };
            }
        }

        function getTimeAgo(timestamp) {
            const now = new Date();
            const diffMs = now - timestamp;
            const diffMins = Math.floor(diffMs / 60000);
            const diffHours = Math.floor(diffMs / 3600000);
            const diffDays = Math.floor(diffMs / 86400000);
            
            if (diffMins < 1) return 'Just now';
            if (diffMins < 60) return `${diffMins} min ago`;
            if (diffHours < 24) return `${diffHours} hr ago`;
            if (diffDays < 7) return `${diffDays} day${diffDays > 1 ? 's' : ''} ago`;
            
            return timestamp.toLocaleDateString();
        }

        function markAsRead(id) {
            const notification = notifications.find(n => n.id === id);
            if (notification) {
                notification.read = true;
                updateNotificationBadge();
                renderNotifications();
            }
        }

        function markAllAsRead() {
            notifications.forEach(n => n.read = true);
            updateNotificationBadge();
            renderNotifications();
            showToast('All notifications marked as read', 'success');
        }

        function switchNotificationTab(tab) {
            currentNotificationTab = tab;
            
            // Update active tab
            document.querySelectorAll('#notifications-screen .tab').forEach(t => t.classList.remove('active'));
            event.target.classList.add('active');
            
            renderNotifications();
        }

        function showToast(message, type = 'info') {
            // Remove existing toast if any
            const existingToast = document.querySelector('.toast');
            if (existingToast) {
                existingToast.remove();
            }
            
            const icon = type === 'success' ? 'fa-check-circle' : 
                        type === 'warning' ? 'fa-exclamation-triangle' : 
                        type === 'error' ? 'fa-times-circle' : 'fa-info-circle';
            
            const color = type === 'success' ? 'var(--success)' : 
                         type === 'warning' ? 'var(--accent)' : 
                         type === 'error' ? 'var(--danger)' : 'var(--primary)';
            
            const toast = document.createElement('div');
            toast.className = 'toast';
            toast.innerHTML = `
                <i class="fas ${icon}" style="color: ${color};"></i>
                <span>${message}</span>
            `;
            
            document.body.appendChild(toast);
            
            // Remove toast after animation
            setTimeout(() => {
                if (toast.parentNode) {
                    toast.parentNode.removeChild(toast);
                }
            }, 3000);
        }

        /* --- STATS UPDATES --- */
        function updateCustomerStats() {
            const activeRequests = requests.filter(r => !r.status.includes('Booked')).length;
            const totalBids = requests.reduce((total, r) => total + r.bids.length, 0);
            
            document.getElementById('customer-active-requests').innerText = activeRequests;
            document.getElementById('customer-total-bids').innerText = totalBids;
            document.getElementById('request-count').innerText = `${activeRequests} request${activeRequests !== 1 ? 's' : ''}`;
        }

        function updateVendorStats() {
            document.getElementById('vendor-bids-sent').innerText = vendorStats.bidsSent;
            document.getElementById('vendor-jobs-won').innerText = vendorStats.jobsWon;
        }

        /* --- GENERATE SEED REQUESTS FOR VENDOR --- */
        function generateSeedRequests() {
            const cats = Object.keys(subtypes);
            const urgencies = ['Normal', 'High'];
            
            for(let i=0; i<3; i++) {
                const cat = cats[Math.floor(Math.random()*cats.length)];
                const sub = subtypes[cat][Math.floor(Math.random()*subtypes[cat].length)];
                
                const newReq = {
                    id: Date.now() + i,
                    cat: cat,
                    detail: sub,
                    urgency: urgencies[Math.floor(Math.random()*urgencies.length)],
                    desc: "Auto-generated market request " + (i+1),
                    status: 'Searching...',
                    bids: []
                };
                
                requests.unshift(newReq);
            }
            
            // Add notifications for new leads
            if (role === 'vendor') {
                addNotification({
                    title: 'New Service Requests Available',
                    message: 'There are 3 new service requests in your area. Check them out now!',
                    type: 'info',
                    actions: [
                        { label: 'View Leads', onclick: 'navTo(\'vendor-dash\')', primary: true }
                    ]
                });
            }
        }

        /* --- CUSTOMER LOGIC --- */
        let tempCat = '';

        function startRequest(cat) {
            tempCat = cat;
            document.getElementById('req-cat-display').value = cat;
            const sel = document.getElementById('req-detail');
            sel.innerHTML = '';
            
            subtypes[cat].forEach(s => {
                let opt = document.createElement('option');
                opt.innerText = s;
                sel.appendChild(opt);
            });
            
            navTo('request-screen');
        }

        function submitRequest() {
            const detail = document.getElementById('req-detail').value;
            const urgency = document.getElementById('req-urgency').value;
            const desc = document.getElementById('req-desc').value;
            
            if(!desc) { 
                showToast('Please describe the issue', 'warning');
                return; 
            }
            
            const reqId = Date.now();
            const newReq = {
                id: reqId, 
                cat: tempCat, 
                detail: detail, 
                urgency: urgency, 
                desc: desc, 
                status: 'Searching...', 
                bids: []
            };
            
            requests.unshift(newReq);
            addNotification({
                title: 'Service Request Posted',
                message: `Your ${detail} request has been posted successfully. Vendors will start bidding soon.`,
                type: 'success'
            });
            navTo('customer-dash');
            renderRequests();
            updateCustomerStats();
            
            setTimeout(() => {
                if(newReq.bids.length === 0) simulateBotBids(reqId);
            }, 5000);
        }

        function renderRequests() {
            const list = document.getElementById('active-requests-list');
            list.innerHTML = '';
            
            const activeRequests = requests.filter(r => !r.status.includes('Booked'));
            
            if(activeRequests.length === 0) { 
                list.innerHTML = '<p style="text-align:center; color:#94a3b8; margin-top:20px;">No active requests. Create one to get started!</p>'; 
                return; 
            }
            
            activeRequests.forEach(r => {
                let statusClass = r.status.includes('Booked') ? 'status-booked' : 
                                r.bids.length > 0 ? 'status-bids' : 'status-pending';
                
                let statusText = r.status.includes('Booked') ? 'Booked' : 
                               r.bids.length > 0 ? r.bids.length + ' Bids Ready' : r.status;
                
                let actionButton = r.bids.length > 0 ? 
                    `<button class="btn-primary" style="padding:10px; margin-top:10px; font-size:0.9rem;" onclick="viewBids(${r.id})">View ${r.bids.length} Bids</button>` : 
                    '';
                
                list.innerHTML += `
                    <div class="request-card">
                        <span class="status-badge ${statusClass}">${statusText}</span>
                        <h4 style="font-weight:600; margin-bottom:4px;">${r.cat} - ${r.detail}</h4>
                        <p style="font-size:0.85rem; color:#64748b; margin-bottom:8px;">${r.desc}</p>
                        <div style="display:flex; justify-content:space-between; font-size:0.8rem; color:var(--text-light);">
                            <span><i class="fas fa-clock"></i> ${r.urgency}</span>
                            <span><i class="fas fa-calendar"></i> ${new Date(r.id).toLocaleDateString()}</span>
                        </div>
                        ${actionButton}
                    </div>
                `;
            });
        }

        function simulateBotBids(reqId) {
            const req = requests.find(r => r.id === reqId);
            if(!req) return;
            if(req.bids.length > 0) return;
            
            // FIXED: STRICT CATEGORY MATCHING
            const bots = vendorDatabase[req.cat] || vendorDatabase['Cleaning'];
            const mockBids = bots.map(v => ({
                name: v.name,
                price: v.base + Math.floor(Math.random() * 10),
                rating: (4 + Math.random()).toFixed(1),
                reviews: Math.floor(Math.random() * 100) + 10
            }));
            
            req.bids.push(...mockBids);
            req.status = 'Bids Received';
            
            addNotification({
                title: 'New Bids Received',
                message: `You have received ${mockBids.length} bids for your ${req.detail} request.`,
                type: 'success',
                actions: [
                    { label: 'View Bids', onclick: `viewBids(${req.id})`, primary: true }
                ]
            });
            
            renderRequests();
            updateCustomerStats();
        }

        /* --- VENDOR LOGIC --- */
        let selectedLeadId = null;

        function renderVendorLeads() {
            const container = document.getElementById('vendor-leads-list');
            container.innerHTML = '';
            
            let leads = requests.filter(r => !r.status.includes('Booked'));
            
            // Filter based on active tab
            if (currentVendorTab === 'mybids') {
                leads = leads.filter(r => r.bids.some(b => b.name.includes('Vendor Inc.')));
            }
            
            document.getElementById('v-lead-count').innerText = leads.length;
            
            if(leads.length === 0) {
                container.innerHTML = '<p style="text-align:center; color:#999; margin-top:20px;">No leads found.</p>';
                return;
            }
            
            leads.forEach(r => {
                const hasMyBid = r.bids.some(b => b.name.includes('Vendor Inc.'));
                
                container.innerHTML += `
                    <div class="request-card" style="border-left:4px solid var(--primary);">
                        <div style="display:flex; justify-content:space-between; align-items:flex-start;">
                            <div style="flex: 1;">
                                <h4 style="margin:0 0 8px 0;">${r.detail}</h4>
                                <p style="font-size:0.9rem; color:#64748b; margin-bottom:10px;">"${r.desc}"</p>
                                <div style="display:flex; justify-content:space-between; font-size:0.8rem; color:var(--text-light);">
                                    <span><i class="fas fa-tag"></i> ${r.cat}</span>
                                    <span><i class="fas fa-clock"></i> ${r.urgency}</span>
                                </div>
                            </div>
                        </div>
                        <div style="display:flex; justify-content:space-between; align-items:center; margin-top:15px;">
                            <span style="font-size:0.8rem; color:var(--text-light);">
                                ${r.bids.length} bid${r.bids.length !== 1 ? 's' : ''}
                                ${hasMyBid ? ' • <span style="color:var(--success);">Your bid sent</span>' : ''}
                            </span>
                            <button class="btn-primary" style="padding:8px 15px; font-size:0.9rem;" onclick="openBidModal(${r.id}, '${r.detail}')">
                                ${hasMyBid ? 'Rebid' : 'Bid Now'}
                            </button>
                        </div>
                    </div>
                `;
            });
        }

        function switchVendorTab(tab) {
            currentVendorTab = tab;
            
            // Update active tab
            document.querySelectorAll('#vendor-dash .tab').forEach(t => t.classList.remove('active'));
            event.target.classList.add('active');
            
            renderVendorLeads();
        }

        function openBidModal(id, title) {
            selectedLeadId = id;
            document.getElementById('modal-req-name').innerText = title;
            document.getElementById('vendor-bid-input').value = '';
            document.getElementById('vendor-bid-modal').style.display = 'flex';
        }

        function submitVendorBid() {
            const price = document.getElementById('vendor-bid-input').value;
            if(!price) {
                showToast('Please enter a bid amount', 'warning');
                return;
            }
            
            const req = requests.find(r => r.id === selectedLeadId);
            
            // Check if we already have a bid and update it
            const existingBidIndex = req.bids.findIndex(b => b.name.includes('Vendor Inc.'));
            
            if (existingBidIndex >= 0) {
                req.bids[existingBidIndex].price = parseFloat(price);
            } else {
                req.bids.push({
                    name: 'Vendor Inc. (You)',
                    price: parseFloat(price),
                    rating: '5.0',
                    reviews: 42
                });
                vendorStats.bidsSent++;
            }
            
            req.status = 'Bids Received';
            document.getElementById('vendor-bid-modal').style.display = 'none';
            
            addNotification({
                title: 'Bid Sent Successfully',
                message: `Your bid of ${price} BHD for ${req.detail} has been sent to the customer.`,
                type: 'success'
            });
            
            renderVendorLeads();
            updateVendorStats();
        }

        /* --- BIDDING & BARGAINING --- */
        let currentReqId = null;
        let currentBidIdx = null;

        function viewBids(reqId) {
            currentReqId = reqId;
            const req = requests.find(r => r.id === reqId);
            const container = document.getElementById('bids-container');
            container.innerHTML = '';
            
            // Sort bids by price (lowest first)
            const sortedBids = [...req.bids].sort((a, b) => a.price - b.price);
            
            sortedBids.forEach((bid, index) => {
                const originalIndex = req.bids.indexOf(bid);
                
                container.innerHTML += `
                    <div class="bid-item">
                        <div class="bid-header">
                            <div>
                                <div style="font-weight:600;">${bid.name}</div>
                                <div style="font-size:0.8rem; color:var(--text-light); display:flex; align-items:center; gap:5px; margin-top:5px;">
                                    <div style="display:flex; align-items:center; gap:2px;">
                                        <i class="fas fa-star" style="color:#f59e0b;"></i> ${bid.rating}
                                    </div>
                                    <span>•</span>
                                    <div>${bid.reviews || '25'} reviews</div>
                                </div>
                            </div>
                            <div class="bid-price">${bid.price} BHD</div>
                        </div>
                        <div class="bid-actions">
                            <button class="action-btn btn-accept" onclick="acceptBid(${reqId}, ${originalIndex})">Accept</button>
                            <button class="action-btn btn-bargain" onclick="openBargain(${reqId}, ${originalIndex}, ${bid.price})">Bargain</button>
                            <button class="action-btn btn-reject" onclick="rejectBid(${reqId}, ${originalIndex})">Reject</button>
                        </div>
                    </div>
                `;
            });
            
            navTo('view-bids-screen');
        }

        function acceptBid(reqId, idx) {
            const req = requests.find(r => r.id === reqId);
            req.status = `Booked: ${req.bids[idx].name}`;
            vendorStats.jobsWon++;
            
            addNotification({
                title: 'Service Booked',
                message: `You've accepted a bid from ${req.bids[idx].name} for ${req.detail}. The vendor will contact you soon.`,
                type: 'success'
            });
            
            alert('Job Confirmed!');
            navTo('job-success-screen');
            updateVendorStats();
        }

        function rejectBid(reqId, idx) {
            const req = requests.find(r => r.id === reqId);
            req.bids.splice(idx, 1);
            viewBids(reqId);
        }

        function openBargain(reqId, idx, price) {
            currentReqId = reqId;
            currentBidIdx = idx;
            document.getElementById('modal-orig-price').innerText = price;
            document.getElementById('bargain-input').value = '';
            document.getElementById('bargain-modal').style.display = 'flex';
        }

        function submitCounterOffer() {
            const offer = parseInt(document.getElementById('bargain-input').value);
            const req = requests.find(r => r.id === currentReqId);
            const bid = req.bids[currentBidIdx];
            document.getElementById('bargain-modal').style.display = 'none';
            
            if(offer >= bid.price * 0.8) {
                if(confirm(`${bid.name} ACCEPTED your offer of ${offer} BHD!`)) {
                    bid.price = offer;
                    acceptBid(currentReqId, currentBidIdx);
                }
            } else {
                alert(`${bid.name} REJECTED your offer.`);
            }
        }

        /* --- SUPPLIER MARKET --- */
        function renderSupplierList() {
            const container = document.getElementById('supplier-list');
            container.innerHTML = '';
            
            const searchTerm = document.getElementById('supply-search').value.toLowerCase();
            
            const filteredSuppliers = suppliers.filter(s => 
                s.item.toLowerCase().includes(searchTerm) || 
                s.category.toLowerCase().includes(searchTerm)
            );
            
            if (filteredSuppliers.length === 0) {
                container.innerHTML = '<p style="text-align:center; color:#94a3b8; margin-top:20px;">No supplies found matching your search.</p>';
                return;
            }
            
            filteredSuppliers.forEach(s => {
                container.innerHTML += `
                    <div class="dashboard-card">
                        <div style="display:flex; justify-content:space-between; align-items:center;">
                            <div>
                                <strong>${s.item}</strong>
                                <p style="color:var(--text-light); font-size:0.8rem; margin:5px 0;">${s.category}</p>
                                <span style="color:var(--primary); font-weight:600;">${s.price}</span>
                            </div>
                            <button class="btn-primary" style="padding:8px 15px; font-size:0.9rem;" onclick="orderSupply('${s.item}')">Order</button>
                        </div>
                    </div>
                `;
            });
        }

        function orderSupply(item) {
            addNotification({
                title: 'Supply Order Placed',
                message: `Your order for ${item} has been placed successfully. You will receive a confirmation email shortly.`,
                type: 'success'
            });
            
            showToast(`Order placed for ${item}`, 'success');
        }

        // Initialize supplier list
        document.getElementById('supply-search').addEventListener('input', renderSupplierList);
        renderSupplierList();

        /* --- PROFILE & SETTINGS --- */
        function saveProfile() {
            const name = document.getElementById('p-name').value;
            const email = document.getElementById('p-email').value;
            const phone = document.getElementById('p-phone').value;
            const address = document.getElementById('p-address').value;
            
            if(name) {
                document.getElementById('dash-name').innerText = name;
                document.getElementById('profile-name').innerText = name;
                document.getElementById('menu-user').innerText = name;
            }
            
            addNotification({
                title: 'Profile Updated',
                message: 'Your profile information has been updated successfully.',
                type: 'success'
            });
            
            showToast('Profile updated successfully', 'success');
            
            if(role === 'customer') navTo('customer-dash'); 
            else navTo('vendor-dash');
        }

        function submitComplaint() {
            const complaintText = document.getElementById('complaint-text').value;
            if (!complaintText) {
                showToast('Please describe your complaint', 'warning');
                return;
            }
            
            addNotification({
                title: 'Complaint Submitted',
                message: 'Your complaint has been submitted successfully. Our support team will contact you within 24 hours.',
                type: 'success'
            });
            
            showToast('Complaint submitted successfully', 'success');
            navTo('customer-dash');
        }

        function submitSupport() {
            const message = document.getElementById('support-message').value;
            if (!message) {
                showToast('Please enter your message', 'warning');
                return;
            }
            
            addNotification({
                title: 'Support Message Sent',
                message: 'Your support message has been sent successfully. We will respond within 24 hours.',
                type: 'success'
            });
            
            showToast('Support message sent successfully', 'success');
            navTo('customer-dash');
        }

        // Service search functionality
        document.getElementById('service-search').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const catCards = document.querySelectorAll('.cat-card');
            
            catCards.forEach(card => {
                const serviceName = card.querySelector('p').textContent.toLowerCase();
                if (serviceName.includes(searchTerm)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });

        // Initialize the app
        window.onload = function() {
            renderSupplierList();
            buildMenu();
            updateDateTime();
            fetchBahrainWeather();
            
            // Update time every minute
            setInterval(updateDateTime, 60000);
            
            // Add sample notifications for demo
            setTimeout(() => {
                if (notifications.length === 0) {
                    addNotification({
                        title: 'Welcome to FlipBid Pro',
                        message: 'Get started by exploring the features available in your dashboard.',
                        type: 'info'
                    });
                }
            }, 2000);
        };
    </script>
</body>
